#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout,NULL)
	//pedir dos numeros
	int numero1;
	int numero2;
    int resultado_Resta;
    int resultado_Suma;
    int resultado_Multiplicacion;
	int resultado_Division;
	printf("Ingrese primer nùmero:");
	scanf("%d",&numero1);
	printf("Ingresaste %d",numero1);
	printf("Ingrese segundo nùmero:");
    scanf("%d",&numero2);
	printf("Ingresaste %d",numero2);

	resultado_Resta= numero1-numero2;

	printf("Resultado resta %d",resultado_Resta);

	resultado_Suma= numero1+numero2;

	printf("Resultado Suma %d",resultado_Suma);

	resultado_Multiplicacion= numero1*numero2;

	printf("Resultado multiplicacion%d",resultado_Multiplicacion);

	resultado_Division= numero1/numero2;

	printf("Resultado multiplicacion%d",resultado_Division);


		return EXIT_SUCCESS;
}
